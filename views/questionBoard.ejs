<!doctype html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <!-- fontawsome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

  <title>QnA app</title>

  <link rel="stylesheet" href="/stylesheets/questionBoard.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <span class="navbar-brand title" href="#">QnA App</span>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item ">
          <a class="nav-link text-white" href="/sessions">Session</a>
        </li>
      </ul>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item ">
          <a class="nav-link text-white undisplay" id="askBtn" href="#">
            Ask ?</a>
        </li>
        <li class="nav-item ">
          <span class="nav-link text-white">
            <%= user.DisplayName %></span>
        </li>
        <li class="nav-item ">
          <a class="nav-link text-white" href="/logout">
            <i class="fas fa-sign-out-alt"></i> Log out</a>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container">
    <div class="session-name items-align-center text-center my-1">
      <span id="session-name">Software Engineering</span>
    </div>

    <div class="questionForm w-sm-100 w-md-75 mx-auto pb-2">
      <div class="questionForm-head d-flex text-center">
        <p class=" w-100 h2">Add new question</p>
        <i class="fas fa-times ml-auto mr-3 my-2"></i>
      </div>
      <div class="form">
        <div class="title d-flex">
          <label class="w-25" for="title">Title:</label>
          <input class="w-100" type="text" id="title" autocomplete="off">
        </div>
        <div class="content d-flex">
          <label class="w-25" for="content">Content:</label>
          <textarea class="w-100" type="text" id="content" autocomplete="off">

          </textarea>
        </div>
        <button class="btn btn-lg submitBtn d-block mx-auto my-2 w-sm-25 " id="submitBtn">
          Submit
        </button>
      </div>
    </div>

    <ul class="nav nav-tabs nav-fill pt-3" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="newest-tab" data-toggle="tab" href="#newest" role="tab" aria-controls="newest" aria-selected="true">Newest</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="top10-tab" data-toggle="tab" href="#top10" role="tab" aria-controls="top10" aria-selected="false">Top 10</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="answered-tab" data-toggle="tab" href="#answered" role="tab" aria-controls="Answered" aria-selected="false">Answered</a>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="newest" role="tabpanel" aria-labelledby="newest-tab">

      </div>
      <div class="tab-pane fade" id="top10" role="tabpanel" aria-labelledby="top10-tab">

      </div>
      <div class="tab-pane fade" id="answered" role="tabpanel" aria-labelledby="answered-tab">

      </div>
    </div>


  </div>

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script type="text/javascript" src="/javascripts/questionBoard.js"></script>
</body>
</html>
